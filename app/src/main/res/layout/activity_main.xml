<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.android.margintop.chartdemo.line.LineGraph
            android:id="@+id/lg_line"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lineAxisColor="@android:color/transparent"/>

        <com.android.margintop.chartdemo.pie.margintop.PieGraph
            android:id="@+id/pie_chart"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#ccc"
            app:pieInnerRadius="50dp"
            app:pieRadius="100dp"
            app:pieTextSize="14sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="start"
            android:text="动画"/>

    </LinearLayout>
</ScrollView>
